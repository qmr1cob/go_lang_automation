# Use a base image that includes both Go and Python
FROM golang:latest

# Install Python and other required packages
RUN apt-get update && \
    apt-get install -y python3 && \
    apt-get clean

# Install pip for Python
RUN curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py && \
    python3 get-pip.py && \
    rm get-pip.py

# Optionally, set up any additional dependencies or configurations needed for your project

# Set the working directory inside the container
WORKDIR /app

# Copy your Go source code into the container
COPY . .

# Build your Go application
RUN go build -o myapp .

# Command to run your Go application
CMD ["./myapp"]
